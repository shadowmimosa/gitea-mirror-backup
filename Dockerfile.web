# Dockerfile for Web Interface
FROM node:18-alpine AS frontend-builder

WORKDIR /app/frontend

# 安装 pnpm
RUN npm install -g pnpm

# 复制前端依赖文件
COPY web/frontend/package.json web/frontend/pnpm-lock.yaml ./

# 安装依赖
RUN pnpm install --frozen-lockfile

# 复制前端源代码和配置文件
COPY web/frontend/ ./

# 构建前端
RUN pnpm build

# 后端镜像
FROM python:3.9-slim

LABEL maintainer="Gitea Mirror Backup"
LABEL description="Web management interface for Gitea Mirror Backup"

WORKDIR /app

# 安装系统依赖
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    git \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY web/requirements.txt /app/web/requirements.txt
COPY requirements.txt /app/requirements.txt

# 安装 Python 依赖
RUN pip install --no-cache-dir -r /app/requirements.txt && \
    pip install --no-cache-dir -r /app/web/requirements.txt

# 复制应用代码
COPY . /app/

# 复制前端构建产物
COPY --from=frontend-builder /app/frontend/dist /app/web/frontend/dist

# 创建数据目录
RUN mkdir -p /app/data /app/backup /app/config

# 暴露端口
EXPOSE 8000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:8000/health')"

# 启动命令
CMD ["python", "-m", "uvicorn", "web.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
